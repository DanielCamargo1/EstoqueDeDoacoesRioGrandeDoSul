@model DoacoesModel
@{
    ViewData["title"] = "Cadastrar Item";
}
<div class="mb-5 text-center">
    <h1>Editar Itens</h1>
</div>

<form method="post" asp-controller="Estoque" asp-action="Cadastrar">
    <div class="row mb-3">
        <label for="Item" class="col-sm-2 col-form-label">Item</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="NomeDoItem" id="Item" placeholder="Ex: Cesta Básica">
            <span class="text-danger" asp-validation-for="NomeDoItem"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Quantidade" class="col-sm-2 col-form-label">Quantidade</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="Quantidade" id="Quantidade" placeholder="Ex.: 2">
            <span class="text-danger" asp-validation-for="Quantidade"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Tipo da doação</label>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="opcao" id="gridRadios1" value="Roupa" checked>
                <label class="form-check-label" for="gridRadios1">
                    Roupa
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="opcao" id="gridRadios2" value="Materiais">
                <label class="form-check-label" for="gridRadios2">
                    Materiais
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="opcao" id="gridRadios3" value="Alimentos">
                <label class="form-check-label" for="gridRadios3">
                    Alimentos
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="opcao" id="gridRadios4" value="Outros">
                <label class="form-check-label" for="gridRadios4">
                    Outros
                </label>
            </div>
        </div>
    </div>
    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Cadastrar</button>
        <a class="btn btn-primary w-50" asp-controller="Estoque" asp-action="Index">Voltar</a>
    </div>
</form>
